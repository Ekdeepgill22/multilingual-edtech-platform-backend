{
  "name": "multilingual-edtech-platform",
  "version": "1.0.0",
  "description": "A comprehensive multilingual EdTech platform backend supporting handwriting OCR, speech-to-text, grammar correction, AI-powered chatbot, and document export for English, Hindi, and Punjabi languages",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --verbose --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "seed": "node scripts/seed.js",
    "build": "npm install --production"
  },
  "keywords": [
    "edtech",
    "multilingual",
    "ocr",
    "speech-to-text",
    "grammar-correction",
    "dialogflow",
    "chatbot",
    "hindi",
    "punjabi",
    "english",
    "education",
    "ai",
    "machine-learning",
    "google-cloud",
    "handwriting-recognition",
    "document-export",
    "nodejs",
    "express"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@google-cloud/speech": "^6.4.0",
    "@google-cloud/translate": "^8.3.0",
    "@google-cloud/vision": "^4.2.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dialogflow": "^2.3.0",
    "docx": "^8.5.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.3.1",
    "express-validator": "^7.1.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.4.4",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "tesseract.js": "^5.1.0",
    "winston": "^3.13.0",
    "redis": "^4.6.14",
    "joi": "^17.13.3",
    "moment": "^2.30.1",
    "uuid": "^10.0.0",
    "sharp": "^0.33.4",
    "express-fileupload": "^1.5.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.1.4",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.2.0",
    "@babel/core": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "babel-jest": "^29.7.0",
    "cross-env": "^7.0.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/config/*.js",
      "!src/tests/**/*.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "src/",
      "server.js"
    ],
    "ext": "js,json",
    "ignore": [
      "node_modules/",
      "uploads/",
      "logs/",
      "coverage/"
    ],
    "env": {
      "NODE_ENV": "development"
    }
  }
}